{
  "comment": "Optimization config WITHOUT indicators - Simple price-based DCA strategy",

  "base_config": {
    "symbol": "FARTCOIN/USDT",
    "timeframe": "15m",
    "start_balance": 10000,
    "leverage": 1,
    "order_type": "long",
    "commission_rate": 0.0004,

    "data_source": {
      "type": "api",
      "api": {
        "exchange": "binance",
        "symbol": "FART/USDT",
        "market_type": "spot",
        "auto_save": false
      }
    },

    "entry_conditions": {
      "trigger_type": "immediate",
      "comment": "Enter immediately at market price, no indicators"
    },

    "first_order": {
      "type": "percent",
      "percent_of_balance": 10
    },

    "dca": {
      "enabled": true,
      "max_orders": 5,
      "step_percent": 2.0,
      "progression_type": "exponential",
      "multiplier": 1.5
    },

    "take_profit": {
      "enabled": true,
      "target_percent": 3.0,
      "trailing": false
    },

    "stop_loss": {
      "enabled": true,
      "stop_percent": 15.0,
      "trailing": false
    },

    "risk_management": {
      "max_drawdown_percent": 50,
      "max_open_positions": 1
    }
  },

  "optimization_params": {
    "comment": "Optimize DCA and exit parameters only, NO indicators",

    "take_profit.target_percent": {
      "min": 1.0,
      "max": 8.0,
      "step": 0.5
    },

    "stop_loss.stop_percent": {
      "min": 5.0,
      "max": 25.0,
      "step": 2.5
    },

    "dca.max_orders": [3, 5, 7, 10, 15],

    "dca.step_percent": [0.5, 1.0, 1.5, 2.0, 2.5, 3.0, 4.0, 5.0],

    "dca.multiplier": {
      "min": 1.0,
      "max": 2.5,
      "step": 0.2
    },

    "dca.progression_type": ["exponential", "linear", "fibonacci"],

    "first_order.percent_of_balance": [5, 8, 10, 12, 15, 20, 25]
  },

  "optimization_settings": {
    "n_trials": 200,
    "max_parallel_backtests": 4,
    "optimization_metric": "custom_score",
    "timeout_minutes": 60
  }
}
