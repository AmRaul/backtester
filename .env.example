# ============================================================================
# Backtester + Market Analytics Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to git!

# ============================================================================
# Database Configuration (PostgreSQL)
# ============================================================================
DB_USER=backtester
DB_PASSWORD=your_secure_password_here_change_this
DB_HOST=postgres
DB_PORT=5432
DB_NAME=backtester

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_PASSWORD=redis_secure_password_change_this
REDIS_HOST=redis
REDIS_PORT=6379

# ============================================================================
# Telegram Bot Configuration
# ============================================================================
# Get your bot token from @BotFather on Telegram
# Example: 123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Optional: Telegram admin user IDs (comma-separated)
# TELEGRAM_ADMIN_IDS=123456789,987654321

# ============================================================================
# Market Analytics API Configuration
# ============================================================================
# Optional: API key for securing analytics endpoints
# ANALYTICS_API_KEY=your_secret_api_key_here

# ============================================================================
# External API Keys (Optional but Recommended)
# ============================================================================

# CoinGecko Pro API Key (free tier available)
# COINGECKO_API_KEY=your_coingecko_api_key

# Alpha Vantage API Key (for macro data)
# https://www.alphavantage.co/support/#api-key
# ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key

# Coinglass API Key (for liquidations data)
# COINGLASS_API_KEY=your_coinglass_api_key

# ============================================================================
# Application Settings
# ============================================================================
FLASK_ENV=production
LOG_LEVEL=info

# Timezone for scheduled tasks
TZ=UTC

# ============================================================================
# Scheduler Settings
# ============================================================================
# Update intervals in minutes
UPDATE_INTERVAL_FEAR_GREED=60
UPDATE_INTERVAL_ALTSEASON=60
UPDATE_INTERVAL_BTC_DOM=60
UPDATE_INTERVAL_NARRATIVE=15
UPDATE_INTERVAL_MACRO=1440  # Once per day

# ============================================================================
# Notification Settings
# ============================================================================
# Enable/disable morning and evening summaries
ENABLE_MORNING_SUMMARY=true
ENABLE_EVENING_SUMMARY=true

# Summary times (UTC)
MORNING_SUMMARY_TIME=06:00
EVENING_SUMMARY_TIME=18:00

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_TELEGRAM_BOT=true
ENABLE_AUTO_UPDATES=true
ENABLE_CACHE=true

# ============================================================================
# Deployment Configuration (Optional)
# ============================================================================
# GitHub Container Registry
GITHUB_REPOSITORY=username/backtester

# Domain & SSL (for Traefik)
DOMAIN=backtester.hub-cargo.ru
LETSENCRYPT_EMAIL=your-email@example.com

# Web Application
WEB_PORT=8000

# Optional: For automatic deployment
DEPLOY_HOST=your-server.com
DEPLOY_USER=deploy
DEPLOY_PATH=/opt/backtester
